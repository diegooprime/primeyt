{
  "manifest_version": 3,
  "name": "PrimeYT",
  "version": "1.0.0",
  "description": "Minimalist, keyboard-driven YouTube experience",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*", "https://youtube.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["stats.js", "keyboard.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}

